{
  "manifest_version": 2,
  "name": "Genza",
  "version": "2.1.0",
  "description": "__MSG_extensionDescription__",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "__MSG_extensionName__",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self'; object-src 'self'; frame-src 'none'; frame-ancestors 'none'",
  "default_locale": "ru",
  "applications": {
    "gecko": {
      "id": "genza@yourdomain.com",
      "strict_min_version": "68.0"
    }
  },
  "web_accessible_resources": [
    "changelog.md"
  ]
}